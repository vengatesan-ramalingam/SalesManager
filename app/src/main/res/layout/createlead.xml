<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/rel1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:saveEnabled="false">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/buildbg"
                android:id="@+id/image"
                android:scaleType="fitXY" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/contprofile"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="30dp"
                android:id="@+id/leadimage"
                android:adjustViewBounds="false"
                android:cropToPadding="false" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/rel1"
            android:id="@+id/rel2">

            <TextView
                android:text="DOCTOR NAME"
                android:gravity="bottom"
                android:textStyle="bold"
                android:textColor="#444"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView1" />
            <TextView
                android:text="*"
                android:textColor="#FFC12D2D"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:textSize="17dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/textView1"
                android:id="@+id/textView2" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:textColorHint="#dfdfdf"
                android:textColor="#444"
                android:singleLine="true"
                android:inputType="textNoSuggestions"
                android:hint="Enter Doctor Name Here"
                android:layout_marginLeft="80dp"
                android:id="@+id/edit_docname"
                android:backgroundTint="#c7c6c6"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/rel2"
            android:id="@+id/rel3">

            <TextView
                android:text="DOCTOR DESTINATION/DIVISION"
                android:textStyle="bold"
                android:textColor="#444"
                android:layout_marginLeft="20dp"
                android:textSize="17dp"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView3" />
            <TextView
                android:text="*"
                android:textColor="#FFC12D2D"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="top"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_toRightOf="@+id/textView3"
                android:id="@+id/textView4" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rel3"
            android:id="@+id/rel4">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColorHint="#dfdfdf"
                android:backgroundTint="#c7c6c6"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:hint="Enter Doctor Destination/Division"
                android:layout_marginLeft="80dp"
                android:id="@+id/edit_docdes" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/rel4"
            android:id="@+id/rel5">

            <TextView
                android:text="ADDRESS"
                android:textStyle="bold"
                android:textColor="#444"
                android:layout_marginLeft="20dp"
                android:textSize="17dp"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView5" />
            <TextView
                android:text="*"
                android:textColor="#FFC12D2D"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView5"
                android:textAppearance="?android:textAppearanceMedium"
                android:id="@+id/textView6" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/marker"
                android:layout_marginRight="20dp"
               android:layout_alignParentRight="true"
                android:id="@+id/imageicon" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_below="@+id/rel5"
            android:id="@+id/rel6">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textNoSuggestions"
                android:hint="Address Line 01"
                android:textColorHint="#dfdfdf"
                android:layout_marginLeft="80dp"
                android:id="@+id/edit_add1"
                android:singleLine="true"
                android:backgroundTint="#c7c6c6"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textNoSuggestions"
                android:hint="Address Line 02"
                android:singleLine="true"
                android:textColorHint="#dfdfdf"
                android:layout_below="@+id/edit_add1"
                android:layout_marginLeft="80dp"
                android:id="@+id/edit_add2"
                android:backgroundTint="#c7c6c6"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textNoSuggestions"
                android:hint="City"
                android:textColorHint="#dfdfdf"
                android:singleLine="true"
                android:layout_below="@+id/edit_add2"
                android:layout_marginLeft="80dp"
                android:id="@+id/edit_city"
                android:backgroundTint="#c7c6c6"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textNoSuggestions"
                android:hint="State"
                android:textColorHint="#dfdfdf"
                android:layout_below="@+id/edit_city"
                android:layout_marginLeft="80dp"
                android:singleLine="true"
                android:id="@+id/edit_state"
                android:backgroundTint="#c7c6c6"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textNoSuggestions"
                android:hint="Zip Code"
                android:textColorHint="#dfdfdf"
                android:layout_below="@+id/edit_state"
                android:layout_marginLeft="80dp"
                android:singleLine="true"
                android:id="@+id/edit_pin"
                android:backgroundTint="#c7c6c6"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="565dp"
            android:id="@+id/rel7">

            <TextView
                android:text="CONTACT NUMBER"
                android:textStyle="bold"
                android:gravity="bottom"
                android:textColor="#444"
                android:layout_marginLeft="20dp"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView7" />
            <TextView
                android:text="*"
                android:textColor="#FFC12D2D"
                android:textStyle="bold"
                android:gravity="top"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_toRightOf="@+id/textView7"
                android:layout_height="30dp"
                android:id="@+id/textView8" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rel7"
            android:layout_marginTop="10dp"
            android:id="@+id/rel8">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColorHint="#dfdfdf"
                android:inputType="phone"
                android:hint="Landline/Mobile Number"
                android:layout_marginLeft="80dp"
                android:singleLine="true"
                android:id="@+id/edit_mobNum"
                android:backgroundTint="#c7c6c6"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/rel8"
            android:layout_marginTop="0dp"
            android:id="@+id/rel9">

            <TextView
                android:text="ASSIGN TO"
                android:textColor="#444"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView9" />
            <TextView
                android:text="*"
                android:textColor="#FFC12D2D"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView9"
                android:layout_height="30dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginRight="230dp"
                android:id="@+id/textView10" />

            <EditText
                android:id="@+id/spinner_txt"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView9"
                android:textColor="#444"
                android:hint="Choose the Representative"
                android:textStyle="bold"
                android:focusable="false"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:layout_marginLeft="80dp"/>



            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="80dp"

                android:layout_below="@+id/spinner_txt"
                android:background="#cccccc"/>

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="710dp"
            android:background="@drawable/buttonback"
            android:text="CREATE"
            android:textColor="#F5F5F5"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"
            android:id="@+id/layout_create"/>
    </RelativeLayout>
</ScrollView>