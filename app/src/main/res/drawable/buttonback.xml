<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#EE9919" />
            <gradient android:angle="-90" android:startColor="#dd8d16" android:endColor="#dd8d16"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#EE9919" />
            <solid android:color="#EE9919"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#EE9919" />
            <gradient android:angle="-90" android:startColor="#EE9919" android:endColor="#EE9919" />
        </shape>
    </item>
</selector>